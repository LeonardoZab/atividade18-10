<h1>Atualização de Atividades</h1>
<br>
<form action="/atualizar" method="post">
    <label for="">Nome da Atividade:</label>
    <input type="text" name="Nome"><br>
    <label for="">Descricao da Atividade:</label>
    <input type="text" name="Descricao"><br>
    <button type="submit">Atualiza</button>
</form>
<br>
{{#if msg}}
    <p>{{msg}}</p>
{{/if}}
{{#if msg3}}
    <p>{{msg3}}</p>
{{else}}
    <p>{{msg2}}</p>
{{/if}}